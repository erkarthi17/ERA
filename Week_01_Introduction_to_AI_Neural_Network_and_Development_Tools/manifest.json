{
  "manifest_version": 3,
  "name": "Canvas Keyword Search",
  "version": "1.0",
  "description": "Search Canvas LMS by keyword and get session summaries",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["http://localhost:8000/*", "http://127.0.0.1:8000/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' http://localhost:8000 http://127.0.0.1:8000"
  }
}